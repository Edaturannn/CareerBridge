@model UserProfileViewModel

<header class="text-white text-center py-5">
    <div class="container">
        <h4 class="display-6 fw-bold">Profile</h4>
    </div>
</header>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Ad</label>
        <input type="text" class="form-control" id="Fullname" name="Fullname" required value="@Model.User.FullName" readonly />
    </div>

    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" required value="@Model.User.Email" />
    </div>

    <div class="form-group">
        <label for="Department">Okuduğunuz Bölümü Seçiniz</label>
        <select class="form-control" id="Department" name="Department">
            <option value="@Model.User.Department">@Model.User.Department</option>
            @foreach (var dep in Model.Departmants)
            {
                <option value="@dep.DepartmantName">@dep.DepartmantName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Class">Okuduğunuz Sınıfı Seçiniz</label>
        <select class="form-control" id="Class" name="Class">
            <option value="@Model.User.Class">@Model.User.Class</option>
            @foreach (var cls in Model.Classes)
            {
                <option value="@cls.ClassName">@cls.ClassName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
