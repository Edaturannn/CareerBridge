<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="/Account/ResetPassword"> <h3>Şifre Sıfırlama</h3></a>
                            <p>Yeni şifrenizi belirleyin.</p>
                            <form class="mt-5 mb-5 login-input" asp-action="ResetPassword" method="post">
                                <input type="hidden" name="token" value=@Context.Request.Query["token"] />

                                <div class="form-group">
                                    <input type="password" name="newPassword" id="newPassword" class="form-control" required/>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Gönder</button>
                            </form>
                            <p class="text-center mt-3"><a href="/Home/Login"><b>Geri Dön</b></a></p>
                            <p class="text-center mt-3"><a href="/Home/Register"><b>Kayıt Ol</b></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
