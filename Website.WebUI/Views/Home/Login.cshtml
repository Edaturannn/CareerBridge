@model LoginDto
<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="/Home/Login"> <h3>Giriş Yap</h3></a>
                            <form class="mt-5 mb-5 login-input" method="post" asp-controller="Home" asp-action="Login">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="username" placeholder="Kullanıcı adını girin" name="Username">
                                    <span class="text-danger" asp-validation-for="Username"></span>

                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin" name="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                            </form>
                            <p class="text-center mt-3"><a href="/Home/Register"><b>Kayıt Ol</b></a></p>
                            <p class="text-center mt-3"><a href="/Account/ForgotPassword"><b>Şifremi Unuttum</b></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
