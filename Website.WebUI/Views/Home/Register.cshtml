@model RegisterDto
<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="/Home/Register"> <h3>Kayıt Ol</h3></a>
                            <form class="mt-5 mb-5 login-input" method="post" asp-controller="Home" asp-action="Register">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="text" placeholder="Adınızı giriniz" name="Username">
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" name="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin" name="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                            </form>
                            <p class="text-center mt-3"><a href="/Home/Login"><b>Giriş Yap</b></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>